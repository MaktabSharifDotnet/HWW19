@model HW19.Domain.ToDoAgg.Dtos.CreateToDoDto


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["FailureMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["FailureMessage"]
    </div>
}
@section Styles {
    <link rel="stylesheet" href="~/css/addtodo.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/persian-datepicker@1.2.0/dist/css/persian-datepicker.min.css" />
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/persian-date@1.1.0/dist/persian-date.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/persian-datepicker@1.2.0/dist/js/persian-datepicker.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#DueDate").persianDatepicker({
                format: "YYYY/MM/DD",
                autoClose: true,
                calendarType: "persian",
                observer: true,
                initialValue: false,
                toolbox: {
                    calendarSwitch: {
                        enabled: false
                    }
                }
            });
        });
    </script>
}

<div class="add-todo-container">
    <h1>افزودن کار جدید</h1>

    <form method="post" asp-controller="User" asp-action="Add">

        <div class="form-group">
            <label asp-for="Title">عنوان</label>
            <input type="text" asp-for="Title" class="form-control" placeholder="مثلا: تکمیل تمرین مکتب..." />
        </div>


        <div class="form-group">
            <label asp-for="Description">توضیحات</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="توضیحات بیشتر..."></textarea>
        </div>


        <div class="form-group">
            <label asp-for="DueDate">تاریخ سررسید (شمسی)</label>
            <input type="text" asp-for="DueDate" class="form-control datepicker-input" id="DueDate" placeholder="تاریخ را انتخاب کنید" autocomplete="off" />
        </div>


        <div class="form-group">
            <label asp-for="CategoryId">دسته‌بندی</label>
            <select asp-for="CategoryId" class="form-control">
                <option value="">یک دسته‌بندی انتخاب کنید...</option>
                <option value="1">شخصی</option>
                <option value="2">کاری</option>
                <option value="3">دانشگاهی</option>
                <option value="4">سایر</option>
                <option value="5">خرید</option>
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="submit-button">ثبت کار</button>
        </div>
    </form>
</div>

