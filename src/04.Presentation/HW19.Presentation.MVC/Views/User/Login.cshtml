@using HW19.Domain.UserAgg.Dto
@{
    ViewData["Title"] = "ورود به سیستم";
}
@model UserInfoInputDto
<link rel="stylesheet" href="~/css/login.css" />

<div class="login-container">
    <h2>ورود به سیستم</h2>
    <form method="post" asp-controller="User" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label>نام کاربری:</label>
        <input asp-for="Username" type="text" required />

        <label asp-for="Password">رمز عبور:</label>
        <input asp-for="Password" type="password" required />

        <button type="submit">ورود</button>
    </form>

    <div class="register-link">
        <p>حساب کاربری ندارید؟</p>
        <a asp-controller="User" asp-action="Register">ثبت‌نام کنید</a>
    </div>
</div>
